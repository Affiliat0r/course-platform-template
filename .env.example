# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Local development: postgresql://postgres:password@localhost:5432/courseplatform
# Production: Use your hosted database URL (Vercel Postgres, Supabase, etc.)
DATABASE_URL="postgresql://postgres:password@localhost:5432/courseplatform"

# NextAuth.js Authentication
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Stripe Payment Integration
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/test/webhooks
# For local development, use Stripe CLI: stripe listen --forward-to localhost:3000/api/payments/webhook
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Email Service (Optional - for transactional emails)
# Options: Resend, SendGrid, Postmark, AWS SES
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@your-course-platform.com"

# Video Hosting (Optional - if hosting course videos)
# Options: Mux, Cloudflare Stream, Vimeo
MUX_TOKEN_ID="your-mux-token-id"
MUX_TOKEN_SECRET="your-mux-token-secret"

# File Storage (Optional - for course materials, user uploads)
# AWS S3 or Vercel Blob
AWS_S3_BUCKET="your-bucket-name"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="your-course-platform.com"

# Environment
NODE_ENV="development"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Your Course Platform"

# Rate Limiting (Optional)
UPSTASH_REDIS_REST_URL="your-upstash-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"
